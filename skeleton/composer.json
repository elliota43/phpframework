{
    "name": "your-name/project-name",
    "description": "A new project built with the PHP Framework",
    "type": "project",
    "require": {
        "elliotanderson/phpframework": "^1.0",
        "php": ">=8.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php -r \"if (!file_exists('database.sqlite')) touch('database.sqlite');\""
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}

