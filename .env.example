# Application Configuration
APP_NAME="Mini Framework"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:9003

# Database Configuration
# Supported drivers: sqlite, mysql, pgsql
DB_CONNECTION=sqlite

# SQLite Configuration
DB_DATABASE=database.sqlite

# MySQL Configuration (when DB_CONNECTION=mysql)
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=forge
# DB_USERNAME=forge
# DB_PASSWORD=
# DB_CHARSET=utf8mb4
# DB_COLLATION=utf8mb4_unicode_ci

# PostgreSQL Configuration (when DB_CONNECTION=pgsql)
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=forge
# DB_USERNAME=forge
# DB_PASSWORD=
# DB_CHARSET=utf8

# Logging
LOG_PATH=storage/logs

# Configuration
CONFIG_PATH=config
