{
    "name": "elliotanderson/phpframework",
    "description": "A lightweight, educational PHP framework with service container, routing, ORM, and more",
    "type": "library",
    "license": "MIT",
    "keywords": ["framework", "php", "mvc", "orm", "routing"],
    "autoload": {
        "psr-4": {
            "Framework\\": "src/"
        },
        "files": [
            "src/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "app/",
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Elliot Anderson",
            "email": "elliot.anderson43@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.5"
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "bin": [
        "mini"
    ],
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    }
}
